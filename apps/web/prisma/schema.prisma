generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── NextAuth required tables ─────────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("viewer")
  // Nullable: only set for email/password users; null for GitHub-only users
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  userConnections UserConnection[]
  webPlans        WebPlan[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── Personal AI Employee domain models ──────────────────────────────────────

model Connection {
  id            String    @id @default(cuid())
  name          String    @unique // linkedin | gmail | odoo | twitter | whatsapp
  displayName   String
  status        String    @default("unknown") // healthy | degraded | offline | unknown
  lastCheckedAt DateTime?
  metadata      Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Run {
  id          String     @id @default(cuid())
  mode        String     // dry_run | execute
  status      String     @default("running") // running | completed | failed
  startedAt   DateTime   @default(now())
  completedAt DateTime?
  summary     String?    @db.Text
  stdout      String?    @db.Text
  stderr      String?    @db.Text
  scriptsRun  Int        @default(0)
  eventLogs   EventLog[]
}

model EventLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  level     String   // info | warning | error | success
  source    String   // system | linkedin | gmail | odoo | twitter | whatsapp | run
  message   String   @db.Text
  metadata  Json?
  runId     String?
  run       Run?     @relation(fields: [runId], references: [id])

  @@index([timestamp(sort: Desc)])
  @@index([source])
  @@index([level])
}

model InboxItem {
  id          String   @id @default(cuid())
  source      String   // gmail | linkedin | twitter | whatsapp | odoo | filesystem
  receivedAt  DateTime
  excerpt     String   @db.Text
  status      String   @default("unread") // unread | read | actioned | archived
  filePath    String?
  piiRedacted Boolean  @default(true)
  rawJson     Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([source])
  @@index([status])
  @@index([receivedAt(sort: Desc)])
}

// Legacy Plan model (for filesystem-synced plans from watcher scripts)
model Plan {
  id        String   @id @default(cuid())
  title     String
  status    String   // pending_approval | approved | completed | failed | draft
  filePath  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  metadata  Json?

  @@index([status])
  @@index([createdAt(sort: Desc)])
}

// ── Web Control Plane — user-created plans via command center ────────────────

// Per-user integration connection (oauth status, no secrets stored)
model UserConnection {
  id          String   @id @default(cuid())
  userId      String
  provider    String   // linkedin | gmail | whatsapp | twitter
  connected   Boolean  @default(false)
  displayName String?  // e.g. profile name from OAuth
  profileUrl  String?
  metadata    Json?    // Non-secret display fields only (e.g. follower count)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
}

// Web-created action plans (wizard → approve → execute)
model WebPlan {
  id          String         @id @default(cuid())
  userId      String
  title       String
  channel     String         // linkedin | gmail | whatsapp | twitter
  actionType  String         // post_text | post_image | draft_email | send_email | send_message | view_recent
  payload     Json           // Normalized action payload (content, tone, hashtags, etc.)
  status      String         @default("draft")
  // draft | pending_approval | approved | rejected | executed | failed | scheduled
  scheduledAt DateTime?
  filePath    String?        // Path to markdown plan file (local only)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  metadata    Json?
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  executionLogs ExecutionLog2[]

  @@index([userId])
  @@index([status])
  @@index([channel])
  @@index([createdAt(sort: Desc)])
}

model ExecutionLog2 {
  id        String   @id @default(cuid())
  planId    String
  status    String   // running | success | failed
  result    Json?
  stdout    String?  @db.Text
  stderr    String?  @db.Text
  createdAt DateTime @default(now())
  plan      WebPlan  @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([planId])
}
