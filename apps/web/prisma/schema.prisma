generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── NextAuth required tables ─────────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("viewer")
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── Personal AI Employee domain models ──────────────────────────────────────

model Connection {
  id            String    @id @default(cuid())
  name          String    @unique // linkedin | gmail | odoo | twitter | whatsapp
  displayName   String
  status        String    @default("unknown") // healthy | degraded | offline | unknown
  lastCheckedAt DateTime?
  metadata      Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Run {
  id          String     @id @default(cuid())
  mode        String     // dry_run | execute
  status      String     @default("running") // running | completed | failed
  startedAt   DateTime   @default(now())
  completedAt DateTime?
  summary     String?    @db.Text
  stdout      String?    @db.Text
  stderr      String?    @db.Text
  scriptsRun  Int        @default(0)
  eventLogs   EventLog[]
}

model EventLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  level     String   // info | warning | error | success
  source    String   // system | linkedin | gmail | odoo | twitter | whatsapp | run
  message   String   @db.Text
  metadata  Json?
  runId     String?
  run       Run?     @relation(fields: [runId], references: [id])

  @@index([timestamp(sort: Desc)])
  @@index([source])
  @@index([level])
}

model InboxItem {
  id          String   @id @default(cuid())
  source      String   // gmail | linkedin | twitter | whatsapp | odoo | filesystem
  receivedAt  DateTime
  excerpt     String   @db.Text
  status      String   @default("unread") // unread | read | actioned | archived
  filePath    String?
  piiRedacted Boolean  @default(true)
  rawJson     Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([source])
  @@index([status])
  @@index([receivedAt(sort: Desc)])
}

model Plan {
  id        String   @id @default(cuid())
  title     String
  status    String   // pending_approval | approved | completed | failed | draft
  filePath  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  metadata  Json?

  @@index([status])
  @@index([createdAt(sort: Desc)])
}
